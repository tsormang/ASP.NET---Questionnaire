@model IEnumerable<Questionnaire.Entity.Theme>

@{
    ViewBag.Title = "Question Themes";
}

<h2><span class="fa fa-empire"></span> Question Themes</h2>

<h5>
    @Html.ActionLink("Create New Theme", "Create")
</h5>

<hr />
<br />


@*<p>
        @Html.DisplayNameFor(model => model.Title)
    </p>*@


@foreach (var item in Model)
{
    <section id="services" class="services service-section">
        <div class="container">
            <div class="row">

                <div class="col-md-4 col-sm-6 services">
                    <span class="icon icon-tools"></span>
                    <div class="services-content">
                        <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                        <p>
                            @Html.ActionLink("Edit Theme", "Edit", new { id = item.ThemeID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ThemeID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ThemeID })
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </section>
}





